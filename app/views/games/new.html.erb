<div class="container">
  <h1>Longest Word Possible Game</h1>
  <p>Create the longest possible english word with the letters available!</p>
  <h2>List of Letters</h2>
  <ul class="list-group list-group-horizontal">
    <% @letters.each do |letter| %>
      <li class="list-group-item list-group-item-primary">
      <%= letter %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to "Refresh Grid", :new %></p>
  <h2>Create your Word</h2>
  <div class="col-6 align-center">
    <form class="form-group d-flex" action="/score" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters %>
      <input class="form-control" type="text" name="word">
      <input class="btn btn-primary d-flex align-items-center" type="submit" value="Play!">
    </form>
  </div>
</div>
